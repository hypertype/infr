{
  "extends": "../tsconfig",
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es5",
    "rootDir": "./",
    "outDir": "./dist/esm",
    "declarationDir": "./dist/typings",
    "noEmitOnError": true,
    "composite": true,
    "paths": {
      "@hypertype/infr": [
        "../"
      ],
      "@hypertype/core": [
        "../../core"
      ]
    }
  },
  "include": [
    "**/*.ts"
  ],
  "references": [
    {
      "path": "../"
    },
    {
      "path": "../../core"
    }
  ],
  "exclude": [
    "../node",
    "../node_modules",
    "../dist",
    "dist"
  ]
}